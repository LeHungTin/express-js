extends ../layouts/common

block content
	h1 users list

	a.btn.btn-primary.mb-2(href="/users/create") new

	form(action="/users/search", method="GET", class="d-flex")
		input(type="text", name="q", class="form-control mr-sm-2")
		button(class="btn btn-primary ml-2") search

	table.table
		tr
			th Name
			th Phone
			th Action
		each user in users
			tr
				td= user.name
				td= user.phone
				td
					a(href='/users/' + user.id) View