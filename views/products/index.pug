extends ../layouts/common

block content
	h1 Products list

	a.btn.btn-primary.mb-2(href="/products/create") new

	form(action="/products/search", method="GET", class="d-flex")
		input(type="text", name="q", class="form-control mr-sm-2")
		button(class="btn btn-primary ml-2") search

	div.container
		div.row
			each product in products
				.col-md-3
					.card(style='width: 18rem;')
						img.card-img-top(src='https://picsum.photos/200/150', alt='...')
						.card-body
							h5.card-title= product.name
							p.card-text= product.description
							a.btn.btn-primary(href='/cart/add/' + product.id) Add to cart

	nav(aria-label='Page navigation example')
		ul.pagination
			li.page-item
				a.page-link(href='#', aria-label='Previous')
					span(aria-hidden='true') &laquo;
			li.page-item
				a.page-link(href='#') 1
			li.page-item
				a.page-link(href='#') 2
			li.page-item
				a.page-link(href='#') 3
			li.page-item
				a.page-link(href='#', aria-label='Next')
					span(aria-hidden='true') &raquo;

